<section class="content-main">
    <div class="content-header">
      <h2 class="content-title">Category Offers </h2>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-lg-12">
            <header class="border-bottom mb-4 pb-4">
              <div class="row">
                <div class="col-lg-5 col-6">
                  
                </div>
                <div class="col-lg-5 col-6 d-flex justify-content-end">
                  <button class="btn btn-primary btn-lg btn-block ml-50px" onclick="location.href='/admin/addCategoryOffer';">
                    Create Category Offer
                  </button>
  
                </div>
              </div>
            </header>
  
            <div class="table-responsive">
              <table class="table table-hover" id="myTable">
                <thead>
                  <tr>
                    <th>No:</th>
                    <th>Name</th>
                    <th>Validity</th>
                    <th>Discount %</th>
                    <th class="text-end"> Action </th>
                  </tr>
                </thead>
                <tbody>
                  <% category.forEach(function(item,index) { %>
  
                  <tr>
                    <td><%=index + 1%></td>
                    <td><%=item.name%></td>
                    <td><%= item.discountValidity%></td>
                    <td><%=item.discountPercentage%>%</td>
                    
                    <td class="text-end">
                      <button class="btn-sm btn-danger" onclick="removeCategoryOffer('<%=item._id%>')">Remove</button>
                    </td>
                  </tr>
  
                  <% }); %>
                </tbody>
              </table>
            </div> <!-- table-responsive.// -->
          </div> <!-- col end// -->
  
        </div> <!-- row end// -->
      </div> <!-- card-body // -->
    </div> <!-- card end// -->
   
  </section>
  <script>
    $(document).ready(function() {
      $.noConflict();
      $('#myTable').DataTable({
        "paging": true,          // Enable pagination
        "pageLength": 10,        // Number of rows per page
        "lengthMenu": [5, 10, 20, 30, 50 ,100],  // Dropdown options for rows per page
  
      });
    });
    </script>
  <script>
    
    //to remove the Coupon
   function removeCategoryOffer(categoryId){
    $.ajax({
      url : '/admin/deleteCategoryOffer',
      method : 'delete',
      data : {
        categoryId : categoryId
      },
      success:(successResponse)=>{
        location.reload()
      }
    })
   }
